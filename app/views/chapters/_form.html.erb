<%= render '/layouts/errors', :object => @chapter %>
<%= chapter_and_section_form(@chapter) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>
  <%= f.label :number, 'Chapter number' %>
  <%= f.text_field :number, required: true %>
  <%= f.label(:public, :class => "checkbox") do %>
    <%= f.check_box :public %>
    Public
  <% end %>
  <%= f.submit :class => 'btn btn-primary' %>
<% end %>
