<%= render '/layouts/errors', :object => @course %>
<%= course_and_section_form(@course) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :number, 'Course number' %>
  <%= f.text_field :number %>
  <%= f.label(:public, :class => "checkbox") do %>
    <%= f.check_box :public %>
    Public
  <% end %>
  <%= f.submit :class => 'btn btn-primary' %>
<% end %>
