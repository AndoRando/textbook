<div class="container">
  <div class="row"><br>
    <div class="span6">
      <% provide :title, @course.name %>
      <h1><%= yield :title %></h1><br>
    </div>
  </div>
  <%= form_for @course, method: :put do |f| %>
    <div class="row">
      <div class="span6">
        <div id="course_<%= @course.id %>">
          <% if can? :update, @course %>
            <p>
              <%= link_to "edit", edit_course_path(@course), id: "edit_course_#{@course.id}", class: 'btn btn-mini btn-info' %>
              <%= link_to "delete", @course, data: { confirm: 'Are you sure?' }, method: :delete, id: "delete_course_#{@course.id}", class: 'btn btn-mini btn-primary' %>
            </p>

            <%= f.hidden_field :number, class: :course %>
            <ul class='section'>
              <%= render @course.sections %>
            </ul>
          <% else %>
            <ul>
              <%= render @course.sections.accessible_by(current_ability) %>
            </ul>
          <% end %>
          <% if can? :update, Course %>
            <%= f.submit 'Save Order', class: 'btn btn-info', id: 'save_order' %><br>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="span6">
      <% if can? :update, Course %>
        <p><%= link_to "Edit Course", edit_course_path(@course), id: "edit_course_#{@course.id}", :class => 'btn btn-mini btn-info' %></p>
      <% end%>

      <% if can? :create, Section %>
        <p><%= link_to "New Section", new_course_section_path(@course), :class => "btn btn-success btn-large" %></p>
      <% end %>
    </div>
  </div>
</div>
