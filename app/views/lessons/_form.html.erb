<%= render 'layouts/errors', :object => @lesson %>
<%= form_for @lesson do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :number, 'Lesson number' %>
  <%= f.text_field :number %>
  <%= f.label :section_ids, 'Section' %>
  <%= f.select :section_ids, options_from_collection_for_select(sections, :id, :name) %>
  <%= f.label :video_id, "Video ID from Vimeo" %>
  <%= f.text_field :video_id %>
  <%= f.label(:tutorial, :class => "checkbox") do %>
    <%= f.check_box :tutorial %>
    Tutorial
  <% end %>
  <%= f.label(:public, :class => "checkbox") do %>
    <%= f.check_box :public %>
    Public
  <% end %>  <%= f.label :content, "Content (use Markdown)" %>
  <%= f.text_area :content %>
  <%= f.label :cheat_sheet, "Cheat sheet (use Markdown)" %>
  <%= f.text_area :cheat_sheet, :class => 'cheat-sheet' %>
  <%= f.label :update_warning, "Update warning (use Markdown)" %>
  <%= f.text_area :update_warning, :class => 'update-warning' %>
  <%= f.submit "Save", :class => "btn btn-primary" %>
<% end %>
