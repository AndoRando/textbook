<%= render 'layouts/errors', :object => @lesson %>
<%= form_for @lesson do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :number, 'Lesson number' %>
  <%= f.text_field :number %>
  <%= f.label :section_id, 'Section' %>
  <%= f.select :section_id, options_from_collection_for_select(sections, :id, :name, @lesson.section_id) %>
  <%= f.label(:public, :class => "checkbox") do %>
    <%= f.check_box :public %>
    Public
  <% end %>
  <%= f.label :video_id, "Video ID from Vimeo" %>
  <%= f.text_field :video_id %>
  <%= f.label :content, "Content (use Markdown)" %>
  <%= f.text_area :content %>
  <%= f.label :cheat_sheet, "Cheat sheet (use Markdown)" %>
  <%= f.text_area :cheat_sheet %>
  <%= f.label :update_warning, "Update warning (use Markdown)" %>
  <%= f.text_area :update_warning %>
  <%= f.submit "Save", :class => "btn btn-primary" %>
<% end %>
