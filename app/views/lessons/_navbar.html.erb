<% provide :forward_back do %>
  <ul class="nav">
    <% if @lesson.previous_lesson? %>
      <li><%= link_to 'Previous lesson', @lesson.previous %></li>
    <% end %>

    <% if @lesson.next_lesson? %>
      <li><%= link_to 'Next lesson', @lesson.next %></li>
    <% end %>
  </ul>
<% end %>

<% provide :up do %>
  <li><%= link_to 'Section contents', @lesson.section %>
<% end %>
