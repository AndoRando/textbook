<p>The sort order is the order in which the pages are displayed in the Table of Contents and in the navigation links.</p>

<%= render :partial => 'layouts/errors', :locals => {:object => @page} %>
<%= form_for @page do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :sort_order %>
  <%= f.text_field :sort_order %>
  <%= f.label :body, "Body (use HTML)" %>
  <%= f.text_area :body %>
  <%= f.label :section %>
  <%= f.select :section_id, options_from_collection_for_select(@sections, :id, :name, @page.section_id) %>
  <%= f.submit "Save", :class => "btn btn-primary" %>
<% end %>
