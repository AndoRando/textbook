<%= render :partial => 'layouts/errors', :locals => {:object => @page} %>
<%= form_for @page do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :number, 'Page number (within section)' %>
  <%= f.text_field :number %>
  <%= f.label :body, "Body (use HTML)" %>
  <%= f.text_area :body %>
  <%= f.label :section %>
  <%= f.select :section_id, options_from_collection_for_select(@sections, :id, :name, @page.section_id) %>
  <%= f.submit "Save", :class => "btn btn-primary" %>
<% end %>
