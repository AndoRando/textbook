<%= render :partial => 'layouts/errors', :locals => {:object => @section} %>
<%= form_for @section do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :number, 'Section number (within chapter)' %>
  <%= f.text_field :number %>
  <%= f.submit "Save", :class => "btn btn-primary" %>
<% end %>
