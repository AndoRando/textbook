<%= render 'layouts/errors', :object => @section %>
<%= form_for [@course, @section] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :number, 'Section number' %>
  <%= f.text_field :number %>
  <%= f.label :week, 'Section week' %>
  <%= f.text_field :week %>
  <%= f.label(:public, :class => "checkbox") do %>
    <%= f.check_box :public %>
    Public
  <%= f.hidden_field :course_id, value: @course.id %>
  <% end %>
  <%= f.submit :class => "btn btn-primary" %>
<% end %>
