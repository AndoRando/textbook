<%= render 'layouts/errors', object: @section %>
<%= section_form do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :week, 'Section week' %>
  <%= f.text_field :week %>
  <%= f.label(:public, :class => "checkbox") do %>
    <%= f.check_box :public %>
    Public
  <% end %>
  <%= f.submit :class => "btn btn-primary" %>
<% end %>
