<h1>Table of contents</h1>

<ol>
  <% @sections.each do |section| %>
    <li>
      <%= link_to section.name, section %>
      <ul>
        <% section.pages.each do |page| %>
          <li><%= link_to page.title, page %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ol>

<% if can? :create, Page %>
  <p><%= link_to 'New page', new_page_path, :class => "btn btn-info btn-large" %></p>
<% end %>

<% if can? :create, Section %>
  <p><%= link_to 'New section', new_section_path, :class => "btn btn-success btn-large" %></p>
<% end %>
