<h1>Table of contents</h1>

<table>
  <% @sections.each do |section| %>
    <tr>
      <td><%= link_to section.name, section %></td>
      <% if can? :destroy, Section %>
        <td><%= link_to 'Delete', section, :confirm => 'Are you sure?', :method => :delete %>
      <% end %>
    </tr>
  <% end %>
</table>

<% if can? :create, Section %>
  <%= link_to 'New section', new_section_path %>
<% end %>
