<h1><%= @section.name %></h1>

<ul>
  <% @section.lessons.each do |lesson| %>
    <li><%= link_to lesson.title, lesson %></li>
  <% end %>
</ul>

<% if can? :update, Section %>
  <p><%= link_to "Edit #{@section.name}", edit_section_path(@section), :class => "btn btn-large" %></p>
<% end %>

<% if can? :create, Lesson %>
  <p><%= link_to 'New lesson', new_lesson_path, :class => "btn btn-success btn-large" %></p>
<% end %>

<div class="navbar navbar-fixed-bottom">
  <div class="navbar-inner">
    <div class="container">
      <div class="nav-collapse">
        <ul class="nav pull-right" id="main-menu-right">
          <li><%= link_to 'Table of contents', sections_path %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
